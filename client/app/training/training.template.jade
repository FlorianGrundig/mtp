
header#banner.hero-unit
  .container.training
    h1 Training
    div
      p Manually training - select your exercise and update your experience.
      div
        label(for="exercise_filter") Search for
        input(id="exercise_filter", data-ng-model="exercise_filter", type="text")
      table.exercise-selection
        tr
          th Name
          th Level
          th Duration
          th Progress
          th Times played
        tr(data-ng-repeat="e in exercises | filter: exercise_filter", ng-click="selectExercise(e)", ng-class="{selected: e == exercise}")
          td {{e.name}}
          td.right {{e.level}}
          td.right {{e.replay}} x {{e.duration}} min
          td.right {{e.progress}}
          td.right {{e.times}}

    ui-view
